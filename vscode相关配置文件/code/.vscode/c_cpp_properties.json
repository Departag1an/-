// clang++
{
  "version": 4,
  "configurations": [
    {
      "name": "Clang++",
      "includePath": [
        "E:/LLVM/include/c++/v1",  // libc++ 的路径
        "${workspaceFolder}/**"
      ],
      "defines": [],
      "compilerPath": "E:/LLVM/bin/clang++.exe",
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "clang-x64",
      "browse": {
        "path": [
          "E:/LLVM/include/c++/v1",  // libc++ 的路径
          "${workspaceFolder}/**"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}

